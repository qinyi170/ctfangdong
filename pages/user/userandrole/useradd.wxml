<view class="con_add">
  <view>子账号</view>
  <view>
    <input type='number' placeholder='请输入手机号作为子账号' placeholder-class='placeholderclass' bindinput='getoperatorphone' bindblur='getoperatorphone' disabled='{{operatorid!=""}}' value='{{operator_phone}}'></input>
  </view>
  <view>姓名</view>
  <view>
    <input type='text' placeholder='请输入子账号人员的姓名' placeholder-class='placeholderclass' bindinput='getoperatorname' bindblur='getoperatorname' value='{{operator_name}}'></input>
  </view>
  <view>联系方式</view>
  <view>
    <input type='number' placeholder='请输入联系方式' placeholder-class='placeholderclass' bindinput='getcontactinfo' bindblur='getcontactinfo' value='{{contact_info}}'></input>
  </view>
  <view>备注</view>
  <view>
    <input type='text' placeholder='请为子账号添加备注' placeholder-class='placeholderclass' bindinput='getremarks' bindblur='getremarks' value='{{remarks}}'></input>
  </view>
</view>
<button class='button1_1 abtn' bindtap='saveusers'>保存</button>